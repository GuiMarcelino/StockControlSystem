<%= form_for([@order, @order_product], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @order_product.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo: </h4>

      <ul>
      <% @order_product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Produto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.select :product_id, Product.all.collect { |product| [product.name, product.id] },{:selected => @order_product.product_id }, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Valor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :value, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
