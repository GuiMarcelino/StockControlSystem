<%= form_for(@product, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os campos abaixo: </h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Nome, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Descrição, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Quantidade, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :amount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Data_vencimento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :due_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Valor_compra, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :value_buy, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Valor_venda, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :value_sale, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
