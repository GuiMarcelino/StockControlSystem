<div class="page-header">
  <%= link_to new_supplier_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Fornecedor
  <% end %>
  <h1>Lista fornecedores</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Site</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @supplieres) do |supplier| %>
            <td><%= supplier.name %></td>
            <td><%= supplier.phone %></td>
            <td><%= supplier.email %></td>
            <td><%= supplier.site %></td>
            <td><%= link_to 'Mostrar', supplier %></td>
        <td><%= link_to 'Editar', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Apagar', supplier, method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
